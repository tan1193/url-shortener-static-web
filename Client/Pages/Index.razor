@page "/"
@using BlazorApp.Shared
@inject NavigationManager NavigationManager

@code {
    private string slug = "tui-nam";
    private List<LinkDefinition> linkDefinitions = new ();

    protected override void OnInitialized()
    {
        LinkService linkservice = new LinkService();
        linkDefinitions = linkservice.GetLinkDefinitions();

        var linkDefinition = linkDefinitions.FirstOrDefault(ld => ld.Slug == slug);
        if (linkDefinition != null)
        {
            var amazonUrl = linkDefinition.DefaultUrl; 
            NavigationManager.NavigateTo(amazonUrl);
        }
        else
        {
            // Handle case when slug is not found
        }
    }
}